div(ng-attr-donate='')
	//- a(ui-sref='index') Like Codoshop?
	header
		h2 Donate

		div
			p.cond Your donation will help support this software and the developer.

	//- .divider
	//- 	div
	//- 		div
	.codoshop-title-row
		div
		h5
			span One-time Donation
			br
			br
			span.fa.fa-caret-down(style='font-size: 21px;')
		div
		h5
			span Monthly Subscription
			br
			br
			span.fa.fa-caret-down(style='font-size: 21px;')
		div
			p.cond(style='padding: 0 10px;') Attach a suggestion to your donation.
	.codoshop-donate-row(ng-repeat='don in donList', ng-class='{"codoshop-first": $first}')
		div
			div(style='font-size: 42px') $
		div.codoshop-donate-input-cell
			input(ng-model='getters(don, "once")', ng-model-options='{ getterSetter: true }', min='0', type='number', step='any', placeholder='0.0')
		div
			div
		div.codoshop-donate-input-cell
			input(ng-model='getters(don, "sub")', ng-model-options='{ getterSetter: true }', min='0', type='number', step='any', placeholder='0.0')
		div.codoshop-donate-row-progress-bar
			//- progressbar
			div
				div(ng-style='{width: don.progress + "%"}')
					div
			//- label
			div
				div {{don.label}}


	
	.codoshop-donate-row
		div
			div total
		div.codoshop-donate-input-cell
			div {{total('once') | currency : '' : 2}}
		div
			div
		div.codoshop-donate-input-cell
			div {{total('sub') | currency : '' : 2}}
		div
			//- progressbar
			div
				div(ng-style='{width: 0}')
					div
			//- label
			div
				div

	.codoshop-donate-row
		div
			div pay
		div
			div
				ul
					li
						a(href='#', onclick='return false;', ng-click='paypal("once")')
							span.fa.fa-paypal 
							span paypal
		div
			div

		div.codoshop-donate-input-cell
			div
				ul
					li
						a(href='#', onclick='return false;', ng-click='paypal("sub")')
							span.fa.fa-paypal 
							span paypal



	form#codoshop-subscription-form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_blank', style='display: none;')
